# Mediawiki with mysql as database

version: "3"
services:
  mediawiki:
    image: mediawiki:latest
    depends_on:
      - mysql
    ports:
      - 8080:80
    volumes:
      - file:/var/www/html/LocalSettings.php:rw


  mysql:
    image: mysql:latest
    ports:
      - 3306:3306
    environment:
      MYSQL_DATABASE: wiki
      MYSQL_USER: wiki
      MYSQL_PASSWORD: password
      MYSQL_ROOT_PASSWORD: password
    volumes:
      - dbdata:/var/lib/mysql:rw

volumes:
  dbdata:
    driver: local
    driver_opts:
      type: 'none'
      o: 'bind'
      device: '/tmp/mysql'
  file:
    driver: local
    driver_opts:
      type: 'none'
      o: 'bind'
      device: '/root/thoughtworks/mediawiki/LocalSettings.php'
